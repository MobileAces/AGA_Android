<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AwesomeGroupAlarm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue_deep_sea</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Base.AGA" parent="Base.Theme.AwesomeGroupAlarm" />

    <style name="Base.AGA.TEXT" parent="Base.AGA">
        <item name="fontFamily">@font/font_nexon_lv2_gothic_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.AGA.Button" parent="@style/Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/blue_deep_sea</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/Base.AGA.TEXT</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 아래스타일은 TextInputLayout에 적용 -->
    <style name="Base.AGA.EditText" parent="Base.AGA">
        <item name="boxStrokeWidth">2dp</item>
        <item name="endIconMode">password_toggle</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="Base.AGA.TextInputLayout" parent="Base.AGA">
        <item name="boxStrokeColor">@color/til_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/til_stroke</item>
        <item name="android:textAppearance">@style/Base.AGA.TEXT</item>
        <item name="hintTextAppearance">@style/Base.AGA.TEXT</item>
    </style>

    <style name="Base.AGA.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
    </style>

    <style name="Base.AGA.DatePicker" parent="Base.AGA">

    </style>

    <style name="Base.AGA.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="trackTint">@color/color_switch_tracktint</item>
    </style>

    <style name="Base.AGA.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/chip_bg</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="android:textColor">@drawable/chip_text_color</item>
    </style>

    <style name="Base.AGA.BottomNavigationView" parent="Base.AGA">
        <item name="backgroundTint">@color/white</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemRippleColor">@null</item>
        <item name="elevation">5dp</item>
        <item name="compatShadowEnabled">true</item>
    </style>

    <style name="Base.AGA.FloatingActionButton" parent="Base.AGA">
        <item name="backgroundTint">@color/blue_deep_sea</item>
        <item name="tint">@color/white</item>
    </style>



    <style name="Base.AGA.ProgressBar" parent="Base.AGA">
        <item name="trackColor">@color/blue_bright_light_sea</item>
        <item name="trackThickness">4dp</item>
    </style>

    <style name="Base.AGA.CheckBox" parent="Base.AGA">
        <item name="android:textAppearance">@style/Base.AGA.TEXT</item>
    </style>
    
    <style name="Text.RvItem.Statistics.Daily" parent="Base.AGA">
        <item name="fontFamily">@font/font_nexon_lv2_gothic_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.AGA.ToggleButton" parent="Base.AGA">
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:background">@drawable/bg_weekday_selector</item>
    </style>
</resources>